{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "fileVersion": {
      "type": "string"
    },
    "amgVersion": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "language": {
      "type": "string",
      "enum": ["de", "en"]
    },
    "world": {
      "type": "object",
      "properties": {
        "lmsIdentifier": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            },
            "value": {
              "type": "string"
            }
          },
          "required": ["type", "value"]
        },
        "worldDescription": {
          "type": "string"
        },
        "worldLearningGoals": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "spaces": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "spaceId": {
                "type": "integer"
              },
              "lmsIdentifier": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["type", "value"]
              },
              "spaceDescription": {
                "type": "string"
              },
              "spaceLearningGoals": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "spaceContent": {
                "type": "array",
                "items": {
                  "type": "integer"
                },
                "minItems": 1
              },
              "includedPoints": {
                "type": "integer"
              },
              "requiredPoints": {
                "type": "integer"
              },
              "requiredSpaces": {
                "type": "string"
              }
            },
            "required": [
              "spaceId",
              "lmsIdentifier",
              "spaceDescription",
              "spaceLearningGoals",
              "spaceContent",
              "includedPoints",
              "requiredSpaces"
            ]
          },
          "minItems": 1
        },
        "elements": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "elementId": {
                "type": "integer"
              },
              "lmsIdentifier": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": ["type", "value"]
              },
              "elementDescription": {
                "type": "string"
              },
              "elementLearningGoal": {
                "type": "string"
              },
              "elementCategory": {
                "type": "string"
              },
              "elementContentType": {
                "type": "string"
              },
              "elementPoints": {
                "type": "integer"
              }
            },
            "required": ["elementId", "lmsIdentifier", "elementCategory", "elementContentType", "elementPoints"],
            "minItems": 1
          }
        }
      },
      "required": ["lmsIdentifier", "spaces", "elements"]
    }
  },
  "required": ["fileVersion", "world"]
}
